#!/usr/bin/env ruby

baseDir = File.dirname(__FILE__) + '/..'
require 'rubygems'
require 'yaml'
require "#{baseDir}/lib/uberblog"
require 'uberblog/exec'

conf = File.open("#{baseDir}/config/blog.yml") { |file| YAML.load(file) }
conf['baseDir'] = baseDir
cmd = Uberblog::Publisher.new(conf)
cmd.execute